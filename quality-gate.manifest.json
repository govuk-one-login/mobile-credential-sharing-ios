{
  "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.1.0/schemas/schema.json",
  "services": [
    {
      "service-tag": "mobile-credential-sharing-ios",
      "quality-gates": [
        {
          "check-types": [
            "code style and linting"
          ],
          "config": {
            "file": ".github/workflows/pull-request.yml",
            "name": "Run Linter",
            "path": "jobs.validate_lint.run_linter"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "unit",
            "unit test coverage",
            "code quality"
          ],
          "config": {
            "file": ".github/workflows/pull-request.yml",
            "name": "Run Unit Tests",
            "path": "jobs.build.build"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "code style and linting",
            "unit",
            "unit test coverage",
            "code quality"
          ],
          "config": {
            "file": ".github/workflows/quality-report.yml",
            "name": "iOS Quality Report",
            "path": "jobs.build"
          },
          "phase": "build",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "manual"
          ],
          "config": {
            "file": ".github/workflows/deploy.yml",
            "name": "Deploy",
            "path": "jobs.deploy"
          },
          "phase": "build",
          "provider": "GitHub"
        }
      ]
    }
  ]
}
